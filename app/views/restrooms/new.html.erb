<h1>Add a new restroom</h1>
<%= form_for @restroom do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
    <%= f.label :neighborhood %><br>
    <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, prompt: true) %><br>

    <p>Add tags</p>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :description %><br>
    <%= f.fields_for :tags, @restroom.tags.build do |tags_attributes| %>
        <%= tags_attributes.label 'Add a new tag' %><br>
        <%= tags_attributes.text_field :description %><br>
    <% end %>
    <%= f.submit "Add restroom", class: 'btn cta' %>
<% end %>