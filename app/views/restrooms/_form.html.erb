<%= form_for restroom do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
    <%= f.label :neighborhood %><br>
    <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, prompt: true) %><br>

    <h3>Add tags</h3>
    <%= render partial: 'add_tags', locals: {restroom: restroom, f: f} %>

    <h3>Add a rating</h3>
    <%= f.fields_for :ratings, restroom.ratings.build do |ratings_attributes| %>
        <%= render partial: 'ratings/form_fields', locals: {f: ratings_attributes} %>
    <% end %>

    <%= f.submit "#{submit_text}", class: 'btn cta' %>
<% end %>