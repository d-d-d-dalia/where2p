<!DOCTYPE html>
<html>
  <head>
    <title>Where2p</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-fixed-top" id="mainNav">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">where2p</a>
        </div>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="glyphicon glyphicon-align-justify"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="nav navbar-nav ml-auto">
            <% if !!current_user %>
              <li class="nav-item">
                <%= link_to logout_path, method: 'post', class: 'nav-link' do %>
                  <span class="glyphicon glyphicon-log-out"></span> Sign Out
                <% end %>
              </li>
            <% else %>
              <li class="nav-item"><a href="/signup" class="nav-link"><span class="oi oi-person"></span> Sign Up</a></li>
              <li class="nav-item"><a href="/login" class="nav-link"><span class="oi oi-account-logout"></span> Log In</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= content_tag :div, flash[:message], id: "flash_message" if flash[:message] %>
    <%= yield %>
  </body>
</html>
